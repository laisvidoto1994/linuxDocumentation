  voc=EA poder=E1 coloca-los no arquivo <CODE>/etc/modules.conf</CODE> =
da seguinte=20
  forma: <PRE>     options sb io=3D0x220 irq=3D5 dma=3D1 dma16=3D5 =
mpu_io=3D0x330
</PRE>
